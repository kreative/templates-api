// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Template {
  id            String     @id @default(uuid())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  name          String
  description   String
  slug          String
  tagline       String
  application   String     @default("obsidian")
  thumbnailUrl  String
  galleryImages String[]
  price         Decimal
  fileUrl       String
  downloadUrl   String
  author        Author     @relation(fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  authorId      String
  category      Category   @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  categoryId    String
  plugins       String[]
  downloads     Download[]
}

model Author {
  id          String     @id @default(uuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  displayName String
  bio         String
  avatarUrl   String
  ksn         Int        @default(57427833)
  templates   Template[]
}

model Category {
  id          String     @id @default(uuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  name        String
  description String
  templates   Template[]
}

model Download {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  template     Template @relation(fields: [templateId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  templateId   String
  firstName    String
  lastName     String
  emailAddress String
  ipAddress    String
  userAgent    String
}
